{
  "manifest_version": 2,

  "name": "OWA Outlook reminders checker",
  "description": "Shows desktop notification when there is reminder in Outlook OWA website.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },
  "permissions": [
    "tabs",
    "notifications",
    "*://*.outlook.office.com/*"
  ]
}